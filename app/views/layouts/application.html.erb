<!DOCTYPE html>
<html>
<head>
  <title>SportsTracker</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?sensor=false">
  </script>
  <script type="text/javascript">
      function initialize() {
          var points = new Array();
          var iX = 0;
          var iY = 0;
          $.getJSON(window.location.pathname+'.json',
                  function (data) {
                      var obj = data['points'].split(/[[, \],]{1,2}/);
                      iX = obj[1]; iY = obj[2];
                      for(var i= 0; i<obj.length-1;){
                          if(obj[i] != "") {
                              points.push(new google.maps.LatLng(parseFloat(obj[i]), parseFloat(obj[i+1])));
                              i+=2
                          } else {
                              i++
                          }
                      }

                      var newPath = new google.maps.Polyline({
                          path:points,
                          strokeColor:"#0000FF",
                          strokeOpacity:0.8,
                          strokeWeight:2
                      });

                      var mapOptions = {
                          center: { lat: parseFloat(iX), lng: parseFloat(iY) },
                          zoom: 14
                      };

                      var map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);

                      newPath.setMap(map);
                  });
      }
      google.maps.event.addDomListener(window, 'load', initialize);
  </script>
</head>
<link href="//netdna.bootstrapcdn.com/font-awesome/4.0.0/css/font-awesome.css" rel="stylesheet">
</head>

