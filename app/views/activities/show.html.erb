<div class="container" style="height:100%; width: auto; background-color: #dfe7f1">
  <div class="container text-center" style="margin-top:5px;width: auto;">
    <div class="login">

      <div class="[ col-xs-12 col-sm-offset-2 col-sm-8 ]">
        <ul class="event-list">
          <li>
            <time>
              <span class="day"><%= @activity.date.to_date.day %></span>
              <span class="month"><%= @activity.date.to_date.strftime("%b")%></span>
            </time>
            <div class="info">
              <h2 class="title"><%= @activity.name %></h2>
              <p class="desc"><%= @activity.place.name %></p>
              <p class="desc" style="font-size: 0.9em;"><%= @activity.sport.name %></p>
              <% if !UserActivity.find_by(user_id: current_user.id, activity_id: @activity.id).duration.nil? %>
                  <p class="desc" style="font-size: 0.9em;">
                    <%= UserActivity.find_by(user_id: current_user.id, activity_id: @activity.id).duration %>
                 MINUTES</p>
              <% end %>

              <div style="text-align: right" >
                <span class="desc" style="text-align: right; font-size: 0.8em;">
                    <%= link_to raw('<span class="glyphicon glyphicon-pencil"></span> |') , edit_activity_path(@activity) %>
                    <%= link_to 'Back', list_user_activities_path %>
                </span>
              </div>
            </div>
          </li>
        </ul>
      </div>
        <% if !@activity.points.nil? %>
          <div id="map-canvas"></div>
        <% end %>
    </div>
  </div>
</div>

