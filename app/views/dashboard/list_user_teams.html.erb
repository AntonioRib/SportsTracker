<div class="container" style="height:auto; width: auto; background-color: #dfe7f1">
  <div class="container text-center" style="width: auto;">
<h1>Your Teams</h1>
<table>
  <thead>
  <tr>
    <th>Name</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Team', new_team_path %><br>

<br>
  </div>
<%= link_to 'Back', root_path %>
  </div>