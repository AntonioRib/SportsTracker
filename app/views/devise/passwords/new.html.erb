<div class="container" style="width: auto;">
  <div class="container text-center" style="width: auto;">
    <div class="login">
      <div class="form-signin"><%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= devise_error_messages! %>
            <h2 class="form-signin-heading">Forgot your password?</h2>
            <br />
            <%= f.email_field :email, autofocus: true, :placeholder => "Email", class: "ember-view ember-text-field form-control login-input"%>
            <br />
            <%= f.submit "Reset password", class: "btn btn-lg btn-primary btn-block btn-center" %>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>