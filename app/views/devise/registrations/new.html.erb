<div class="container" style="width: auto;">
  <div class="container text-center" style="width: auto;">
    <div class="login">
      <div class="form-signin">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <h2 class="form-signin-heading">Sign up</h2>
            <br />
            <%= f.text_field :name, autofocus: true, :placeholder => "Name",  class: "ember-view ember-text-field form-control login-input"%>
            <br />
            <%= f.email_field :email, autofocus: true, :placeholder => "Email",  class: "ember-view ember-text-field form-control login-input"%>
            <br />
            <%= f.label :birth_date, class:"text-muted" %> <br/>
            <%= f.date_field :birth_date, autofocus: true%>
            <br />
            <br />
            <%= f.password_field :password, autocomplete: "off", :placeholder => "Password", class: "ember-view ember-text-field form-control login-input-pass" %>
            <% if @validatable %>
                <br /><em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <br />
            <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "Password confirmation", class: "ember-view ember-text-field form-control login-input-pass" %>
            <br />
            <%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block btn-center" %>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>